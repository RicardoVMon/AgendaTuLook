<!-- Reseñas de Clientes -->

<h1 style="font-size: 2vh;" class="fw-bold mb-3">Nuestros Clientes</h1>

@if (Model != null && Model.Any())
{
    <div id="reviewsCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.Count; i++)
            {
                var review = Model[i];
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center mb-3">
                                @* <img src="@review.FotoPerfil" class="rounded-circle me-3" alt="Foto de cliente" width="50" height="50" /> *@
                                <div>
                                    <h5 class="mb-0">@review.Nombre</h5>
                                    <div class="text-warning">
                                        @for (int star = 1; star <= 5; star++)
                                        {
                                            if (star <= review.CalificacionReview)
                                            {
                                                <i class="fas fa-star"></i>
                                            }
                                            else
                                            {
                                                <i class="far fa-star"></i>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                            <p class="card-text mb-0">"@review.ComentarioReview"</p>
                            <p class="text-muted small mt-2">@review.Fecha.ToString("dd MMM yyyy")</p>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="d-flex justify-content-center mt-3">
            <button class="btn btn-sm btn-outline-dark mx-1" type="button" data-bs-target="#reviewsCarousel" data-bs-slide="prev">
                <i class="fas fa-chevron-left"></i>
            </button>
            <button class="btn btn-sm btn-outline-dark mx-1" type="button" data-bs-target="#reviewsCarousel" data-bs-slide="next">
                <i class="fas fa-chevron-right"></i>
            </button>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">No hay reseñas destacadas disponibles.</div>
}

<style>
    #reviewsCarousel .card {
        transition: all 0.3s ease;
        border-radius: 10px;
    }

    #reviewsCarousel .carousel-item {
        padding: 10px;
    }

    .text-warning {
        color: #FFD700 !important;
    }

    #reviewsCarousel .btn-outline-dark {
        border-radius: 50%;
        width: 35px;
        height: 35px;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>
